FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "constant";
    object          chemistryProperties;
}


chemistryType
{
    solver          ode;
    method          CCM;//clean; // chemistryModel (standard in OpenFOAM 7)
}

chemistry       on;

log             off;

initialChemicalTimeStep 1e-7;

odeCoeffs
{
    solver          seulex;
    absTol          1e-08;
    relTol          0.1;
}



importantSpecies
{
    CO2             ;
    H2O             ;
    CH4             ;
    O2              ;
}

CCM
{
//================= New CCM settings =====================//
    // You can select whatever number of PVs
    // as you like!
    principalVars ("T" "CH3OH" "HO2" "H2O2" "CH4" "CH2OH" "C" "CH2" "HCO" "HCCO" "OH" "O" "CH3O");
    //principalVars ("chi" "phieq" "J" "T" "CH3OH" "HO2" "H2O2" "CH4" "CH2OH" "C" "CH2" "HCO" "HCCO" "OH" "O" "CH3O");
    //principalVars ("T" "chi" "phieq" "J" "CH4");
    //principalVars ("T");
    nSlice                50;
    ignoreMin            1e-6;

    optimizedODE         true;

    // debug Switches
    debugMode            false;

    examineYdiff         false; // must have debugMode enabled

    shutdownImmediately  false;  // must have debugMode/shutdownImmediately enabled

    // Timing analysis switch
    debugTime            true;  // true: enable detailed timing analysis for the 9 major steps

    // Communication optimization
    optimizedCommunication true;  // true: use targeted distribution, false: use broadcast

    // Error Control Variables (ecVars) mode
    ecMode
    {
        enabled         false;          // Enable EC mode
        initialVars     (T);           // Start with temperature only
        // tolerance automatically calculated as 1.0/nSlice
        numECVarsToAdd   3;            // Conservative: add 3 variables per iteration
        numECVarsToRemove 1;           // Aggressive: remove 5 variables per iteration
        updateFreq      5;             // Check every 5 steps
    }

    ratioOxygenToCarbonElementInFuel 0;
    // if more than 256/512/1024 cores, try distributed and set the localCores to be 128
    communicator
    {
        mode           global; // global, distributed
        localCores     6;
    }
    
    pvInfo
    {
        // T         (300 2200   5);
        // chi       (0    300   150);
        // phieq     (0      5   0.01);
        // J         (0   0.06   0.005);
        // CH4       (0    0.2   0.001);
    }

    // You will use H atom to calculate J
    JElement        "h";
    
    // You will use Jh to calculate 
    // the scalar dissipation rate '\chi'
    chiComponent    "Jh";// Jc, Jh, Jn, Jo

// oldStyleChi = exp(-grad(phi)*grad(phi))
// newStyleChi = 2D grad(Z)*grad(Z)
    oldStyleChi      false; 

// oldStylePhi: equivalence ratio that will not change during the combustion process
// newStylePhi: equivalence ratio that will change during the combustion process
    oldStylePhi      false;
//================= New CCM settings =====================//

//================= Old CCM settings =====================//
    // old mode
    inertSpecie N2;

    ratioOxygenToCarbonElementInFuel 0;

    min:max:SpanZoneT 300 2200 5;
    min:max:SpanZoneXi 0 1 0.025;
    min:max:SpanZonePhi 0 5 0.01;
    min:max:SpanZoneJH 0 0.06 0.005;
    chemicallyFrozenT 300;
    maxFlammabilityPhi 20;
    // new version
    CCMspecies
    {
        CH4             0 0.2 0.001;
        //HO2           0 0.0005 1e-6;
    }    



// a debug switch
  // org to enable standard chemistry model
  // ccm to switch to CCM chemistry model
    ccm;
//================= Old CCM settings =====================//
}
#include "reactions";

